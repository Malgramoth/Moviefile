@model IList<Moviefile.services.Model.Movie>
@{
    ViewBag.Title = "Movie List";
}
<h2>Movie List</h2>
@if (Model.Count > 0) { 
    
<table>
    <tr>
        <th>Title</th>
        <th>Genre</th>
    </tr>
    
    @foreach (var movie in Model) { 
    <tr>
        <td>
            @Html.ActionLink(movie.Title, "MovieDetails", new { movieId = movie.Id })
        </td>
        <td>@movie.Genre</td>
    </tr>
    }
</table>
}
else
{
    <p>No movies found</p>
}
